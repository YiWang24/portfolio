# Server
SERVER_PORT=8080

# Google AI (ADK)
GOOGLE_API_KEY=your-google-api-key

# GitHub (REST + GraphQL)
GITHUB_TOKEN=your-github-token
GITHUB_USERNAME=your-github-username

# Contact
CONTACT_EMAIL=your@email.com
CONTACT_SUBJECT=Portfolio contact
LINKEDIN_URL=https://linkedin.com/in/yourprofile
CALENDLY_URL=https://calendly.com/yourprofile

# Resend
RESEND_API_KEY=your-resend-api-key
RESEND_FROM=Portfolio <no-reply@yourdomain.com>

# CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
CORS_ALLOWED_METHODS=GET,POST,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_GLOBAL_DAILY=1000
RATE_LIMIT_GLOBAL_HOURLY=100
RATE_LIMIT_IP_DAILY=50
RATE_LIMIT_IP_HOURLY=10

# ========================================
# PostgreSQL (pgvector)
# ========================================
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=portfolio
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-database-password

# ========================================
# RAG Sync
# ========================================
# Secret key for /api/rag/sync endpoint (generate a strong random string)
RAG_SYNC_KEY=your-random-sync-key-here

